{
    "name": "com.ibm.microclimate.vscode",
    "displayName": "%displayName%",
    "description": "%description%",
    "version": "0.0.1",
    "publisher": "no",
    "engines": {
        "vscode": "^1.27.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:ext.mc.projectExplorer"
    ],
    "main": "./out/extension",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "ext.mc.projectExplorer",
                    "name": "%viewName%"
                }
            ]
        },
        "commands": [
            {
                "command": "ext.mc.newConnection",
                "title": "New Microclimate connection",
                "description": "Connect to a Microclimate instance",
                "category": "Microclimate",
                "icon": {
                    "light": "res/img/light/microclimate.svg",
                    "dark": "res/img/light/microclimate.svg"
                }
            },
            {
                "command": "ext.mc.goToFolder",
                "title": "Open folder as workspace",
                "description": "Open this item's folder as your VSCode workspace",
                "category": "Microclimate"
            },
            {
                "command": "ext.mc.openInBrowser",
                "title": "Open in browser",
                "description": "Open this resource in the browser",
                "category": "Microclimate"
            },
            {
                "command": "ext.mc.restartProjectRun",
                "title": "Restart in Run mode",
                "description": "Restart a Microclimate project into Run (normal) mode",
                "category": "Microclimate"
            },
            {
                "command": "ext.mc.restartProjectDebug",
                "title": "Restart in Debug mode",
                "description": "Restart a Microclimate project into Debug mode",
                "category": "Microclimate"
            },
            {
                "command": "ext.mc.requestBuild",
                "title": "Request build",
                "description": "Manually kick off a project build in Microclimate",
                "category": "Microclimate"
            },
            {
                "command": "ext.mc.openBuildLog",
                "title": "Open build log",
                "category": "Microclimate"
            },
            {
                "command": "ext.mc.openAppLog",
                "title": "Open application log",
                "category": "Microclimate"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "ext.mc.goToFolder",
                    "when": "never"
                }
            ],
            "view/title": [
                {
                    "command": "ext.mc.newConnection",
                    "when": "view == ext.mc.projectExplorer",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "ext.mc.openInBrowser",
                    "when": "!(viewItem != ext.mc.projectItem && viewItem != ext.mc.connectionItem)",
                    "group": "ext.mc.a"
                },
                {
                    "command": "ext.mc.goToFolder",
                    "when": "!(viewItem != ext.mc.projectItem && viewItem != ext.mc.connectionItem)",
                    "group": "ext.mc.b"
                },
                {
                    "command": "ext.mc.openAppLog",
                    "when": "viewItem == ext.mc.projectItem",
                    "group": "ext.mc.c"
                },
                {
                    "command": "ext.mc.openBuildLog",
                    "when": "viewItem == ext.mc.projectItem",
                    "group": "ext.mc.c"
                },
                {
                    "command": "ext.mc.requestBuild",
                    "when": "viewItem == ext.mc.projectItem",
                    "group": "ext.mc.c"
                },
                {
                    "command": "ext.mc.restartProjectRun",
                    "when": "viewItem == ext.mc.projectItem",
                    "group": "ext.mc.z"
                },
                {
                    "command": "ext.mc.restartProjectDebug",
                    "when": "viewItem == ext.mc.projectItem",
                    "group": "ext.mc.z"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "ts-node": "^7.0.1",
        "tslint": "^5.8.0",
        "typescript": "^2.9.2",
        "vscode": "^1.1.21"
    },
    "dependencies": {
        "@types/request": "^2.47.1",
        "@types/request-promise-native": "^1.0.15",
        "@types/socket.io-client": "^1.4.32",
        "request": "^2.88.0",
        "request-promise-native": "^1.0.5",
        "socket.io-client": "^2.1.1"
    }
}
