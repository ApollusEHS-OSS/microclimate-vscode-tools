{
	"extends": "../../tslint.json",

	"rules": {
		"only-arrow-functions": false,
		"no-string-literal": false,
		"typedef": false,
		"no-unused-expression": false,
		"no-invalid-this": false,

		"ban": [ true,
			[ "project", "waitForState", "Banned for tests" ],
			[ "project", "waitForStarted", "Banned for tests" ],
			[ "project", "clearPendingState", "Banned for tests" ],
			[ "Log", "i", "Use Log.t for tests" ],
			[ "Log", "d", "Use Log.t for tests" ]
		]
	}
}