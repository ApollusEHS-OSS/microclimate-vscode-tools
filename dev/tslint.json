{
	"rules": {
		"no-string-throw": true,
		"no-unused-expression": true,
		"no-duplicate-variable": true,
		"curly": true,
		"class-name": true,
		"semicolon": [
			true,
			"always"
		],
		"no-unused-variable": true,
		"triple-equals": [ true, "allow-null-check" ],
		"quotemark": [ true, "double" ],
		"prefer-for-of": true,
		"await-promise": [ true, "Thenable" ],
		"no-duplicate-super": true,
		"no-eval": true,
		"no-floating-promises": true,
		"no-invalid-template-strings": true,
		"no-invalid-this": true,
		"no-var-keyword": true,
		"no-use-before-declare": true,
		"prefer-readonly": true,
		"prefer-const": true,
		"no-require-imports": true,
		"max-line-length": [ true, 150 ],
		"deprecation": true,
		"switch-default": true,
		"strict-boolean-expressions": true,
		"new-parens": true,
		"no-boolean-literal-compare": true,
		"typedef": [ true,
			"call-signature", "parameter",
			// "arrow-call-signature", // "arrow-parameter",
			"member-variable-declaration", "property-declaration",
			"object-destructuring", "array-destructuring"
		],
		"ban-types": [ true,
			// [ "Object", "Use {} instead" ],
			// [ "Function", "Use (param: type) => type instead"]
		],
		"ban": [ true,
			// [ "console", "log", "Use Logger.log"],
			[ "console", "warn", "Use Logger.logW"],
			[ "console", "error", "Use Logger.logE"]
		]
	},
	"defaultSeverity": "warning"
}