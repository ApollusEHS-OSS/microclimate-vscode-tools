// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
    "configurations": [
        {
            "name": "Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles": [
                "${workspaceFolder}/dev/out/**/*.js"
            ],
            "preLaunchTask": "build"
        },
        {
            "name": "Extension Tests",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/out/test",

                // Replace below with your local microclimate-workspace

                // workspace when microclimate is built with --dev
                // "/Users/tim/programs/microclimate/microclimate-workspace/"

                // workspace when using production images
                "/Users/tim/microclimate-workspace/"
            ],
            "outFiles": [
                "${workspaceFolder}/dev/out/test/**/*.js"
            ],
            "env": {
                "project_types": "node.js",
                "test_scope": "extended, restart"
            },
            "preLaunchTask": "build"
        }
    ]
}
