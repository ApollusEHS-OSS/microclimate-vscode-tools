// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "type": "npm",
            "script": "compile",
            "problemMatcher": "$tsc-watch",
            // "isBackground": false,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Copy strings to out dir",
            "type": "shell",
            "command": "cp",
            "args": [
                "${workspaceFolder}/src/constants/strings/strings-*.json",
                "${workspaceFolder}/out/constants/strings/"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "type": "npm",
            "script": "lint",
            "problemMatcher": "$tslint5",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "build",
            "dependsOn": [ "Copy strings to out dir", "npm: compile", "npm: lint" ],
            "isBackground": true
        }
    ]
}